    @model List<firstconnectfirebase.Models.Card>
@{
    ViewData["Title"] = "360 Degree Image List";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    
    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
        @foreach (var card in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@card.ImagePath" class="card-img-top" alt="Title Picture" onerror="this.style.display='none'">
                    <div class="card-body">
                        <h5 class="card-title">@card.Title</h5>
                        <p class="card-text text-muted">
                            <small>uploaded time: @card.CreatedDate.ToString("yyyy-MM-dd HH:mm")</small>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <button class="btn btn-sm btn-outline-primary">Full screen</button>
                        <button class="btn btn-sm btn-outline-danger float-end">Delete</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
