@{
    ViewData["Title"] = "360 Degree Image Upload";
}

<link rel="stylesheet" href="~/css/upload360.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" />

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    
    <div class="upload-area mb-4">
        <form id="uploadForm" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Select Scene</label>
                <select class="form-control" id="title" name="title" required>
                    <option value="">-- Select Scene --</option>
                </select>
            </div>

            <div class="preview-container mb-3" id="scenePreviewContainer" style="display:none;">
                <label class="form-label fw-bold mb-2">Scene Preview</label>
                <div class="preview-area">
                    <img id="scenePreview" src="#" alt="Scene Preview" class="img-fluid rounded" style="max-height: 300px; display: block; margin: 0 auto;">
                </div>
            </div>
            
            <div class="mb-3">
                <label for="panoramaImage" class="form-label">Plase select 360 Degree Picture</label>
                <input class="form-control" type="file" id="panoramaImage" name="panoramaImage" accept="image/*" required>
                <div class="form-text">Supported JPG, PNG file format</div>
            </div>
            
            <div class="preview-container mb-3">
                <div class="preview-area">
                    <img id="imagePreview" src="#" alt="scenepreview" class="img-fluid rounded" style="max-height: 300px; display: none; transform-origin: center center;">
                </div>
                <div class="controls mt-2">
                    <button type="button" class="btn btn-outline-primary zoom-in">
                        <i class="bi bi-zoom-in"></i> Zoom in
                    </button>
                    <button type="button" class="btn btn-outline-primary zoom-out">
                        <i class="bi bi-zoom-out"></i> Zoom out
                    </button>
                    <button type="button" class="btn btn-outline-success fullscreen">
                        <i class="bi bi-fullscreen"></i> Full screen
                    </button>
                    <button type="button" class="btn btn-outline-danger" id="resetBtn">
                        <i class="bi bi-arrow-counterclockwise"></i> Rest
                    </button>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary" id="confirmUpload">
                <span id="submitText">Comfirm Upload</span>
                <span id="spinner" class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display: none;"></span>
            </button>
        </form>
        
        <div id="imageUrlDisplay" class="mt-3"></div>
    </div>
</div>


@section Scripts {
    <script src="~/js/upload360.js">
   
    </script>
}



